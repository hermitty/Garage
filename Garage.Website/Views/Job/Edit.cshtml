@model Garage.Website.Models.ViewModel.JobAddEditViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Job</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Job.Id" class="control-label"></label>
                <input asp-for="Job.Id" class="form-control" />
                <span asp-validation-for="Job.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.Title" class="control-label"></label>
                <input asp-for="Job.Title" class="form-control" />
                <span asp-validation-for="Job.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.Description" class="control-label"></label>
                <input asp-for="Job.Description" class="form-control" />
                <span asp-validation-for="Job.Description" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Job.AssigneeId" class="control-label"></label>
                <select asp-for="Job.AssigneeId" class="form-control"
                        asp-items="@(new SelectList(Model.Workers, "Id","Name"))"></select>
            </div>


            <div class="form-group">
                <label asp-for="Job.VehicleId" class="control-label"></label>
                <input asp-for="Job.VehicleId" class="form-control" />
                <span asp-validation-for="Job.VehicleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.FinalDescription" class="control-label"></label>
                <input asp-for="Job.FinalDescription" class="form-control" />
                <span asp-validation-for="Job.FinalDescription" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>*@

            <div class="form-group">
                <label asp-for="Job.Status" class="control-label"></label>
                <select asp-for="Job.Status" class="form-control"
                        asp-items="@(new SelectList(Model.Status, ""))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Job.Scheduled" class="control-label"></label>
                <input asp-for="Job.Scheduled" class="form-control" />
                <span asp-validation-for="Job.Scheduled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
